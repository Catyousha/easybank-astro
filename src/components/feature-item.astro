---
interface Props {
  icon: string;
  title: string;
  description: string;
}

const props = Astro.props;
---

<div class="flex flex-col items-center md:items-start">
  <img src={props.icon}  class="max-w-fit"/>
  <h3 class="mt-6 md:mt-10 text-2xl font-light">{props.title}</h3>
  <p class="mt-4 md:mt-6 text-manatee text-center md:text-start text-[15px] leading-7">
    {props.description}
  </p>
</div>
